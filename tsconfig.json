{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "src/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/Chat.tsx",
    "render/Auth.tsx",
    "src/components/Message.tsx",
    "main/main.js",
    "src/components/Sidebar.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}